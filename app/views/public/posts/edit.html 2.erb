<div class="container">
    <div class="row">
       <div class="col-md-6"  style="margin:50px 250px; ">
          <h1>投稿編集ページ</h1>
              <%= form_for @post, url: public_post_path, method: :patch do |f| %>
                <div class="field">
                    <%= f.label :title %><br />
                    <%= f.text_field :title, class: 'form-control' %>
                </div>

                <div class="field">
                    <%= f.label :body%><br />
                    <%= f.text_field :body, class: 'form-control' %>
                </div>

                <div class="actions">
                    <%= f.submit "投稿情報を編集する" %>
                </div>
              <% end %>
        </div>
    </div>
</div>

