<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>投稿ページ</span>
              </h3>
            </div>
　　　　　　　　　<%= form_for(@post, url: public_posts_path) do |f| %>
              <div class="row">
                <div class="col-sm-12">
			     <h4>ファイル複数選択</h4>
				 <%= f.attachment_field :image %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group has-icon">
                    <label class="control-label sr-only">タイトル</label>
				　　　　<%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
                  </div>
                </div>
                <div class="col-sm-6">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
				<%= f.text_field :body, class:"form-control", rows:"3", placeholder:"コメント"%>
				</div>
              </div>
              <hr>
             <%= f.submit "投稿", class:"btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
