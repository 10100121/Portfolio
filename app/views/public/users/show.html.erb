<div class="py-4 bg-light">
  <section id = "about">
    <div class="container">
    　　<div class="row mb-4">
        <div class="col-md-8 mb-3">
          <h2><%= @user.nickname %></h2>
        </div>
        <div class="col-mb-4">
          <%= link_to"ユーザー詳細変更", edit_public_user_path(@user.id), class: 'btn-lg btn-default btn-block btn' %>
          <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, format: 'jpeg', class: "rounded-circle" %>
    　  </div>
      <div>
      <div class ="row">
         <div class="col-mb-4">
          <%= render 'stats' %>
         </div>
         <div class="col-mb-4">
          <th></th>
         </div>
         <div class="col-mb-4">
          <%= render 'follow_form' %>
         </div>
      </div>
    </div>
  </section>
</div>


<% if @user.id == current_user.id %>

<% else %>
  <% if @isRoom == true %>
    <p><a><%= link_to "チャットへ", public_room_path(@roomId) %></a>
  <% else %>
    <%= form_for @room, url: public_rooms_path do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "ユーザー一覧に戻る", public_users_path %>


<% @user.followings.each do |user| %>
  <table>
    <tr>
      <td><%= link_to "#{user.nickname}", public_user_path(user) %></td>
    </tr>

  </table>
<% end %>

<% @user.followers.each do |user| %>
  <table>
    <tr>
      <td>  <%= user.nickname %> </td>
      <td><%= link_to "#{user.nickname}", public_user_path(user) %></td>
    </tr>
  </table>
<% end %>


<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-8 col-sm-offset-2">
        <div class="masonry-wrapper-cols">
          <div class="masonry-gutter"></div>
           <div class="masonry-block">
              <div class="block block-image v1">
                <div class="block-image">
                  <div class="view view-first">
                  	 </div>
                </div>
                <div class="block-content">
                  <h3 class="block-title">
                    <% @user.posts.each do |toukou| %>
                      <%= link_to public_post_path(toukou) do %>
                       <%= attachment_image_tag toukou, :image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img" %>
                      <% end %>
		                  <%= toukou.title %>
                      <%= toukou.body %>
	                      <%= link_to "詳細", public_post_path(toukou) %>
	                      <%= link_to "編集", edit_public_post_path(toukou) %>
	                  <% end %>
                  </h3>
                  <ul class="inline-meta">
                <li>
                 </li>
                 <li>
                  </li>
                  </ul>

                </div>
              </div>
            </div>
         </div>
      </div>
    </div>
  </div>
</section>
